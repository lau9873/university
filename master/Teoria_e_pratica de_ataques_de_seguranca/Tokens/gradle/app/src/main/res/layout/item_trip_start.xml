        <TextView android:textAppearance="@style/TextAppearance.AppCompat.Title" android:textSize="18.5sp" android:id="@+id/stop" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="-2dp" android:lineSpacingMultiplier="0.85" android:fontFamily="sans-serif"/>
