<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:animateLayoutChanges="true">
    <android.support.constraint.ConstraintLayout android:id="@+id/inspectionTripModeLayout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="horizontal" android:id="@+id/userData" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.7" android:layout_marginStart="16dp">
                <TextView android:textAppearance="@style/TextAppearance.AppCompat.Caption" android:id="@+id/tInspectionUsername" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/user_name" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintTop_toTopOf="0"/>
                <TextView android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:id="@+id/inspectionUsername" android:background="#10000000" android:padding="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/tInspectionUsername"/>
            </LinearLayout>
            <LinearLayout android:layout_width="0dp" android:layout_height="70dp" android:layout_marginTop="16dp" android:layout_weight="0.3">
                <ImageView android:id="@+id/userPicture" android:layout_width="wrap_content" android:layout_height="match_parent" android:scaleType="centerInside" android:contentDescription="@string/user_photo"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/tOperatorLineZone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/userData">
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Caption" android:id="@+id/tOperator" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/operator" android:layout_weight="1" android:layout_marginStart="16dp"/>
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Caption" android:id="@+id/tLine" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/line" android:layout_weight="1"/>
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Caption" android:id="@+id/tValidationZone" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/validation_zone" android:layout_weight="1" android:layout_marginStart="16dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/operatorLineZone" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/tOperatorLineZone">
            <ImageView android:id="@+id/operator" android:layout_width="0dp" android:layout_height="match_parent" android:scaleType="fitStart" android:layout_weight="1" android:contentDescription="@string/operator" android:layout_marginStart="16dp"/>
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:id="@+id/line" android:background="#10000000" android:padding="6dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:maxLines="1" android:layout_weight="1" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:id="@+id/validationZone" android:background="#10000000" android:padding="6dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:maxLines="1" android:layout_weight="1" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/firstStationUsername" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/operatorLineZone">
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Caption" android:id="@+id/tFirstStation" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/first_station" android:layout_weight="1" android:layout_marginStart="16dp"/>
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Caption" android:id="@+id/tValidationTime" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/validation_time" android:layout_weight="1" android:layout_marginStart="16dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/firstStationValidationTime" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/firstStationUsername">
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:id="@+id/firstStation" android:background="#10000000" android:padding="6dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_weight="1" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:id="@+id/validationTime" android:background="#10000000" android:padding="6dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:maxLines="1" android:layout_weight="1" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/tCurrentStationZone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/firstStationValidationTime">
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Caption" android:id="@+id/tCurrentStation" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/current_station" android:layout_weight="1" android:layout_marginStart="16dp"/>
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Caption" android:id="@+id/tCurrentZone" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/current_zone" android:layout_weight="1" android:layout_marginStart="16dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/currentStationZone" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/tCurrentStationZone">
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:id="@+id/currentStation" android:background="#10000000" android:padding="6dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:maxLines="1" android:layout_weight="1" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Body2" android:id="@+id/currentZone" android:background="#10000000" android:padding="6dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:maxLines="1" android:layout_weight="1" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
        </LinearLayout>
        <TextView android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:gravity="center_horizontal" android:id="@+id/help" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginRight="24dp" android:layout_marginBottom="16dp" android:layout_marginStart="24dp" android:layout_marginEnd="24dp" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0"/>
        <TextView android:textAppearance="@style/TextAppearance.AppCompat.Large" android:gravity="center" android:id="@+id/currentDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_marginBottom="32dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" app:layout_constraintBottom_toTopOf="@+id/help" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/currentDate">
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/hce_card_serial_hint"/>
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:id="@+id/hceCardTrip" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout android:gravity="center" android:orientation="vertical" android:id="@+id/inspectionNonTripModeLayout" android:padding="40dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/layout_inspection_nontrip" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintBottom_toTopOf="0" app:layout_constraintTop_toBottomOf="0">
            <ImageView android:id="@+id/ic_beenhere" android:layout_width="wrap_content" android:layout_height="wrap_content" android:tint="@color/andanteColor" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:srcCompat="@drawable/ic_police_black_48dp"/>
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:gravity="center_horizontal" android:id="@+id/hint" android:paddingTop="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/ic_beenhere"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" app:layout_constraintLeft_toLeftOf="0" app:layout_constraintRight_toRightOf="0" app:layout_constraintTop_toBottomOf="@+id/layout_inspection_nontrip">
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:gravity="center_horizontal" android:id="@+id/hceCardNonTripLabel" android:paddingTop="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/hce_card_serial_hint"/>
            <TextView android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:gravity="center_horizontal" android:id="@+id/hceCardNonTrip" android:paddingTop="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
