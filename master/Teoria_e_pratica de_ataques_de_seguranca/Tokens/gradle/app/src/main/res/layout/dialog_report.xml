<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:paddingTop="8dp" android:clipChildren="false" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" android:paddingStart="24dp" android:paddingEnd="24dp">
    <TextView android:id="@+id/textView" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/report_explanation" style="@style/TextAppearance.AppCompat.Body1"/>
    <EditText android:gravity="start|top" android:id="@+id/description" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/report_description" android:lines="4" android:inputType="textMultiLine"/>
    <RadioGroup android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="-8dp">
        <RadioButton android:id="@+id/rightNow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="@string/report_issueRightNow" android:layout_weight="1"/>
        <RadioButton android:id="@+id/past" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/report_issuePast" android:layout_weight="1"/>
    </RadioGroup>
    <CheckBox android:id="@+id/useLocation" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/report_location" android:layout_marginStart="-8dp"/>
</LinearLayout>
